<div class="container py-4">
  <!-- Page Header -->
  <div class="mb-4 text-center">
    <h1 class="h3 mb-2"><%= @shop.name %> â€” Products</h1>
    <p class="text-muted">Select products and add them to your order.</p>
  </div>

  <!-- Products Grid -->
  <div class="row g-4">
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <!-- Product Info -->
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text mb-1">
              <strong>Price:</strong> <%= number_to_currency(product.price) %>
            </p>
            <p class="card-text mb-3">
              <strong>Stock:</strong>
              <span class="<%= product.stock.positive? ? 'text-success' : 'text-danger' %>">
                <%= product.stock %>
              </span>
            </p>

            <!-- Add to Order Form -->
            <%= form_with url: shop_orders_path(@shop), method: :post, local: true, class: "mt-auto" do |f| %>
              <div class="input-group mb-2">
                <%= number_field_tag "order_items[][quantity]", 0, min: 0, class: "form-control", style: "max-width: 80px;" %>
                <%= hidden_field_tag "order_items[][product_id]", product.id %>
                <button type="submit" class="btn btn-primary">Add to Order</button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Empty state -->
  <% if @products.empty? %>
    <div class="text-center text-muted py-5">
      <p class="mb-2">No products available in this shop.</p>
    </div>
  <% end %>
</div>
