<div class="container py-4">
  <div class="text-center mb-4">
    <h1 class="h3 mb-2">All Available Products</h1>
    <p class="text-muted">Browse products and see which shop they belong to.</p>
  </div>

  <% if @products.any? %>
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead class="table-light">
          <tr>
            <th>Product</th>
            <th>Shop</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.tenant.name %></td>
              <td><%= number_to_currency(product.price) %></td>
              <td>
                <span class="<%= product.stock.positive? ? 'text-success' : 'text-danger' %>">
                  <%= product.stock %>
                </span>
              </td>
              <td>
                <%= link_to "View Shop",
                  shop_path(product.tenant),
                  class: "btn btn-sm btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center text-muted py-5">
      <p>No products available.</p>
    </div>
  <% end %>
</div>
