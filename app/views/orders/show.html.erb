<div class="container py-4">
  <!-- Header -->
  <div class="mb-4 text-center">
    <h1 class="h3 mb-2">Order #<%= @order.id %></h1>
    <p class="text-muted">
      Total: <strong><%= number_to_currency(@order.total_cents / 100.0) %></strong>
    </p>
  </div>

  <!-- Order Items -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title mb-3">Items</h5>

      <% if @order.order_items.any? %>
        <div class="table-responsive">
          <table class="table table-striped align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |item| %>
                <tr>
                  <td><%= item.product.name %></td>
                  <td><%= item.quantity %></td>
                  <td><%= number_to_currency(item.price) %></td>
                  <td><%= number_to_currency(item.price * item.quantity) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-muted mb-0">No items in this order.</p>
      <% end %>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-4 text-end">
    <%= link_to "Back to Orders", admin_tenant_orders_path(@order.tenant), class: "btn btn-secondary" %>
  </div>
</div>
