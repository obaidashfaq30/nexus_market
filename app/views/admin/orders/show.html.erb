<h1>Order #<%= @order.id %></h1>
<p><strong>Tenant:</strong> <%= ActsAsTenant.current_tenant.name %></p>
<p><strong>Customer:</strong> <%= @order.user.name %> (<%= @order.user.email %>)</p>
<p><strong>Status:</strong> <%= @order.status.titleize %></p>
<p><strong>Total:</strong> <%= number_to_currency(@order.total_cents / 100.0) %></p>
<p><strong>Platform Fee:</strong> <%= number_to_currency(@platform_fee / 100.0) %></p>

<h2>Order Items</h2>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Subtotal</th>
    </tr>
  </thead>

  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= number_to_currency(item.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Orders', admin_tenant_orders_path(ActsAsTenant.current_tenant) %>
