<div class="container py-4">
  <!-- Page title -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
      <%= ActsAsTenant.current_tenant.name %> â€” Orders
    </h1>
  </div>

  <!-- Navigation tabs -->
  <ul class="nav nav-tabs mb-4">
    <li class="nav-item">
      <%= link_to "Products",
        admin_tenant_products_path(ActsAsTenant.current_tenant),
        class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Orders",
        admin_tenant_orders_path(ActsAsTenant.current_tenant),
        class: "nav-link active" %>
    </li>
  </ul>

  <!-- Orders table -->
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Customer</th>
              <th>Total</th>
              <th>Status</th>
              <th>Created</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>#<%= order.id %></td>
                <td><%= order.user.name %></td>

                <td>
                  <strong>
                    <%= number_to_currency(order.total_cents / 100.0) %>
                  </strong>
                </td>

                <td>
                  <span class="badge 
                    <%= case order.status
                        when 'pending' then 'bg-warning text-dark'
                        when 'paid'    then 'bg-success'
                        when 'failed'  then 'bg-danger'
                        else 'bg-secondary'
                        end %>">
                    <%= order.status.titleize %>
                  </span>
                </td>

                <td class="text-muted">
                  <%= order.created_at.strftime("%b %d, %Y %H:%M") %>
                </td>

                <td class="text-end">
                  <%= link_to "View",
                    admin_tenant_order_path(ActsAsTenant.current_tenant, order),
                    class: "btn btn-outline-primary btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Empty state -->
  <% if @orders.empty? %>
    <div class="text-center text-muted py-5">
      <p class="mb-2">No orders yet</p>
    </div>
  <% end %>
</div>
