<h1>Platform Dashboard</h1>

<h2>Tenants</h2>

<p>
  <%= link_to "Create New Tenant", new_admin_tenant_path %>
</p>

<ul>
  <% @tenants.each do |tenant| %>
    <li>
      <%= link_to tenant.name, admin_tenant_path(tenant) %>
    </li>
  <% end %>
</ul>

<h2>Platform Metrics</h2>

<p>Total Revenue: <%= @total_revenue %></p>
<p>Platform Fees: <%= @platform_fees %></p>
